<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    tools:ignore="ExtraText">


    <ImageButton
        android:id="@+id/analyzeButton"
        android:layout_width="82dp"
        android:layout_height="78dp"
        android:contentDescription="@string/start"
        android:labelFor="@id/analyzeButton"
        app:layout_constraintBottom_toBottomOf="@+id/textEntred"
        app:layout_constraintEnd_toEndOf="@+id/textEntred"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textEntred"
        app:layout_constraintTop_toTopOf="@+id/textEntred"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@android:drawable/ic_menu_send" />


    <EditText

        android:id="@+id/textEntred"
        android:layout_width="367dp"
        android:layout_height="77dp"
        android:autofillHints="name"
        android:hint="@string/enter_text_to_translate"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/resultText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/resultText"
        app:layout_constraintTop_toBottomOf="@+id/resultText"
        app:layout_constraintVertical_bias="0.496" />

    <LinearLayout
        android:id="@+id/signImagesContainer"
        android:layout_width="365dp"
        android:layout_height="458dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="362dp"
        android:layout_height="64dp"

        android:layout_marginTop="48dp"
        android:text="@string/textview"
        app:layout_constraintEnd_toEndOf="@+id/signImagesContainer"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/signImagesContainer"
        app:layout_constraintTop_toBottomOf="@+id/signImagesContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>